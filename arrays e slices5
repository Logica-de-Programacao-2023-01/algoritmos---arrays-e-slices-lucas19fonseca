package main

import "fmt"

func main() {

	array := [3][2]int{}
	var n int
	var line int = 0
	var coluna int = 0

	for {
		if linha == 3 {
			break
		}

		fmt.Printf("Insira o nÃºmero da line %d e da coluna %d: ", line, coluna)
		fmt.Scan(&n)
		array[linha][coluna] = n
		coluna++
		fmt.Printf("Insira o nÃºmero da line %d e da coluna %d: ", line, coluna)
		fmt.Scan(&n)
		array[line][coluna] = n
		line++
		coluna--
	}
	fmt.Println(array)
}
