package main

import "fmt"

func main() {

	array := [3][2]int{}
	var n int
	var linha int = 0
	var coluna int = 0

	for {
		if linha == 3 {
			break
		}

		fmt.Printf("Insira o nÃºmero da linha %d e da coluna %d: ", linha, coluna)
		fmt.Scan(&n)
		array[linha][coluna] = n
		coluna++
		fmt.Printf("Insira o nÃºmero da linha %d e da coluna %d: ", linha, coluna)
		fmt.Scan(&n)
		array[linha][coluna] = n
		linha++
		coluna--
	}
	fmt.Println(array)
}
